<div class="row">
	
	<div class="col-xs-6">
		<p>
			<strong>User Name:</strong>
			<%= @user.name %>
		</p>

		<p>
			<strong>Email ID:</strong>
			<%= @user.email %>
		</p>

		<p>
			<strong>Contact Number</strong>
			<%= @user.contact_number %>
		</p>

		<p>
			<strong>DOB:</strong>
			<%= @user.date_of_birth %>
		</p>
		<p>
			<strong>Type:</strong>
			<%= @user.type %>
		</p>
		<%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-primary btn-xs' %> |
		<%= link_to 'Your Sugar Readings', sugar_readings_path , class: 'btn btn-success btn-xs'%>|
	</div>

	<div class="col-xs-6">	
		<p>
			<div class="field">
	  
				<%= form_tag(reports_view_path, :method => "get") do %>
				<%= label_tag "Enter Date"%><br>
				<%= date_field_tag :report_date, :value => Time.now.strftime('%Y-%m-%d') %>
	
				<div class="field">
					<%= label_tag :report_type %><br />
					<!-- <%= label_tag :report_type, "Daily", :value => "Yes"  %> -->
					<%= radio_button_tag :report_type, 'Daily', :checked => true %>   Daily
					<!-- <%= label_tag :report_type_monthd, "Month-Date", :value => "No" %> -->
					<%= radio_button_tag :report_type, 'Month-Date'%>   Month-Date
					<!-- <%= label_tag :report_type_monthly, "Monthly", :value => "No" %> -->
					<%= radio_button_tag :report_type, 'Monthly'%>   Monthly
				</div>
	
			</div>
		</br>
		<div class="actions">
			<%= submit_tag "Get Report", class: 'btn btn-primary btn-xs'%>
		</div>
		<% end%>

	</br>

	

</p>
</div>

</div>
